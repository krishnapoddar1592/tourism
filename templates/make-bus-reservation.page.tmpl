{{template "base" .}}

{{define "content"}}
<div class="container">
  <div class="row mt-3">
    <div class="col">
      <div class="row mt-2">
        <h1>Make Bus Ticket Reservation</h1>
      </div>
      <div class="row mt-1">
        <form
          action="/make-bus-reservation"
          method="post"
          class="needs-validation"
          novalidate
        >
          <input type="hidden" name="csrf_token" value="{{.CSRFToken}}" />
          <div class="form-group mt-5">
            <strong><label for="bus_id">Enter Bus ID:</label></strong>
            <input type="text" class="form-control" name="bus_id" id="bus_id" />
          </div>

          <div class="row mt-3">
            <div class="col">
              <div class="form-group mt-3">
                <strong><label for="first_name">Enter First Name:</label></strong>
                <input type="text" class="form-control" name="first_name" id="first_name" />
              </div>
            </div>
            <div class="col">
              <div class="form-group mt-3">
                <strong><label for="last_name">Enter Last Name:</label></strong>
                <input type="text" class="form-control" name="last_name" id="last_name" />
              </div>
            </div>
          </div>

          <div class="form-group mt-3">
            <strong
              ><label for="res_date">Enter Reservation Date:</label></strong
            >
            <input
              type="date"
              class="form-control"
              name="res_date"
              id="res_date"
            />
          </div>

          <div class="form-group mt-3">
            <strong><label for="num_people">Enter Num People:</label></strong>
            <input
              type="text"
              class="form-control"
              name="num_people"
              id="num_people"
            />
          </div>

          <div class="row mt-3">
            <div class="col">
              <div class="form-group mt-3">
                <strong><label for="from">Enter Start Location:</label></strong>
                <input type="text" class="form-control" name="from" id="from" />
              </div>
            </div>
            <div class="col">
              <div class="form-group mt-3">
                <strong><label for="to">Enter Destination:</label></strong>
                <input type="text" class="form-control" name="to" id="to" />
              </div>
            </div>
          </div>

          <div class="form-group mt-3">
            <strong
              ><label for="phone">Enter Phone Number:</label></strong
            >
            <input
              type="text"
              class="form-control"
              name="phone"
              id="phone"
            />
          </div>

          <div class="form-group mt-3">
            <strong
              ><label for="email">Enter Email Address:</label></strong
            >
            <input
              type="text"
              class="form-control"
              name="email"
              id="email"
            />
          </div>

          <div class="form-group mt2">
            <hr>
          </div>
          <div class="fowm-group mt-3">
            <input type="submit" class="btn btn-primary mt-2 btn-lg">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ end }}
